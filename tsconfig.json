{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016", 
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom",
      "dom.iterable",
      "webworker",
      "scripthost"
    ],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "typeRoots": ["./node_modules/@types", "./speedJS/vdom"]
  },
  "include": ["src/**/*", "speedJS/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}